
.main-section
  .video-wrap
    .mobile-banner
    = video_tag(["mountains2_converted.webm", "mountains2_converted.mp4", "mountains2_converted.ogv"], :autoplay => "", :height => "", :loop => "", :preload => "auto", :width => "100%", :class => "slider-video")
  .banner-info
    .container
      .welcome-text
        %h1.wow.bounceInLeft
          Welcome to
          %span WillowFlare
        %p.wow.lightSpeedIn The one-stop community for all your mobile game cravings. Play games, be a part of the design process, and earn exclusive rewards!
     
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'first-form signup-form'}) do |f|
        .navigat-icon.wow.bounceInDown
        
        = devise_error_messages!

        = f.text_field :username, autofocus: true, placeholder: "Username"
        = f.email_field :email, autofocus: true, placeholder: "Email"
        = f.password_field :password, autocomplete: "off", placeholder: "Password"
        / = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm"
        = f.text_field :referral, placeholder: "Referral code (optional)"
        = f.submit "Sign up", class: "btn btn-primary btn-lg"

        %p.form-text
          By clicking "Sign up for WillowFlare", you agree to our
          %a{:href => ""} terms of service
          and
          = succeed "." do
            %a{:href => ""} privacy policy


