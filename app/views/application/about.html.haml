.container#about-page
  
  .titles
    %h2 How it Works
    %h3 An overview for playing and testing games on WillowFlare




  .detail-block
    .tabbing
      .tabs.tabs_style_default{"data-tabs-role" => "tabs"}
        .center
          .tabs__head
            %button.tabs__tab{"data-tabs-role" => "tab", "data-tabs-target" => "devs", :type => "button"} If you're a developer
            %button.tabs__tab{"data-tabs-role" => "tab", "data-tabs-target" => "players", :type => "button"} If you're a player
        .tabs__body
          .tabs__pane{"data-tabs-id" => "devs"}
            = render 'application/developers_about'

          .tabs__pane{"data-tabs-id" => "players"}
            = render 'application/players_about'

/ JS
/ = javascript_include_tag 'jquery.tabs'
:javascript
  $(document).ready(function() {
    $('[data-tabs-role="tabs"]').tabs();

    $(window).on('change.tabs', function(event) {
      event.preventDefault();
      console.log('change');
    });
  });

