<p id="notice"><%= notice %></p>


<% if user_signed_in? %>
    <h1>Reviews</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @links.each do |link| %>
          <tr>
                <td class="linkElement linkTitle"><%= link.title %></td>
                <td class="linkElement linkContent"><%= link.content %></td>
                <td class="linkElement linkView"><%= link_to 'View', link %></td>
            <% if link.user == current_user %>
              <td><%= link_to 'Edit', edit_link_path(link) %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>


            <td><div class="btn-group">
              <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
                <i class="fa fa-chevron-up"></i>
                Upvote
                <%= link.get_upvotes.size %>
              <% end %>

              <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
                <i class="fa fa-chevron-down"></i>
                Downvote
                <%= link.get_downvotes.size %>
              <% end %>
            </div></td>

          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
    <iframe src="http://willowflare.com" width="100vw" height="100%"></iframe>
<% end %>
