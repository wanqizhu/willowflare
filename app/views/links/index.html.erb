
<% if user_signed_in? %>

  <div id="surveys" class="container">

  </div>


    <h1>Recent Updates</h1>
      <%-# comment -%>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    

      <tbody>
        <% @links.each do |link| %>
          <tr>
                <td class="linkElement linkTitle"><a href="<%= link.url %>"><%= link.title %></a></td>
                <td class="linkElement linkContent"><%= simple_format(link.content) %></td>
                
            <% if current_user.auth_level >= 90 %>
                <td class="linkElement linkView"><%= link_to 'Comment', link %></td>
            <% end %>

          

            <% if current_user.auth_level >= 90 %>

              <td><%= link_to 'Edit', edit_link_path(link) %></td>
              <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>

              <td><div class="btn-group">
                <%= link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
                  <i class="fa fa-chevron-up"></i>
                  Upvote
                  <%= link.get_upvotes.size %>
                <% end %>

                <%= link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do %>
                  <i class="fa fa-chevron-down"></i>
                  Downvote
                  <%= link.get_downvotes.size %>
                <% end %>
              </div></td>

            <%end %>

          </tr>
        <% end %>
      </tbody>
    </table>




<% else %>
    <iframe src="http://s3.amazonaws.com/willowflare.com/index.html" width="100vw" height="100%"></iframe>
<% end %>
