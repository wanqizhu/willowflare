= stylesheet_link_tag 'landingPage', media: 'all', 'data-turbolinks-track' => true



- if user_signed_in?
  

  .col-md-10.col-md-offset-2
    %h1 Play Games. Give Feedback. Earn Rewards.
    %br
    %br
    %br
    %br

    .left-align
      %h4.caps.light.bold
        %i.fa.fa-star
        New Announcements
      %br


    .announcements
      - @links.each do |link|
        .box-wrapper.icon
          .box-icon
            = image_tag("treasure.png")
          .box
            %h2= link_to link.title, link.url
            %p.light= link.updated_at
            %p= simple_format(link.content)

          - if current_user.auth_level >= 90
            = link_to 'Comment', link
            = link_to 'Edit', edit_link_path(link)
            = link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }

            .btn-group
              = link_to like_link_path(link), method: :put, class: "btn btn-default btn-sm" do
                %i.fa.fa-chevron-up
                  Upvote
                  = link.get_upvotes.size

              = link_to dislike_link_path(link), method: :put, class: "btn btn-default btn-sm" do
                %i.fa.fa-chevron-down
                  Downvote
                  = link.get_downvotes.size



- else

  %iframe{:src => "http://s3.amazonaws.com/willowflare.com/index.html", :width => "100vw",  :height => "100%" }