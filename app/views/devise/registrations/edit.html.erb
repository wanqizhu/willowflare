 <%= stylesheet_link_tag    'editUser', media: 'all', 'data-turbolinks-track' => true %>

<div class="container" id="coins">
  <h1><%= resource.username %>, you have <span style="color: #fed136"><%= resource.money %></span> WillowPoints!</h1>

  <p>If you've recently completed a survey, please allow up to 24 hours for your points to update.</p>
  
  <p>Ready to redeem? We are working to get our store ready <br /> If you already have at least 450 points, <a href="mailto:info@willowflare.com">email us here.</a></p>



  <button class="popupButton btn btn-primary btn-lg" targetID='editUser'>Edit account</button>

  <%= devise_error_messages! %>

</div>


<div class="container" id="editUser">


      
 
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true %>
    </div>

    <i>Fill out your profile to earn <span style="color: #fed136">15</span> points!</i>


    <div class="field">
      <%= f.input :age, collection: User::AGE_.map{|s| [s.humanize, s]} %>
    </div>

    <div class="field">
      <%= f.input :gender, as: :radio_buttons, collection: User::GENDER_.map{|s| [s.humanize, s]} %>
    </div>

    <div class="field">
      <%= f.input :device, collection: User::DEVICE_.map{|s| [s.humanize, s]} %>
    </div>

     <div class="field">
      <%= f.input :OS, label: "Primary OS", collection: User::OS_.map{|s| [s.humanize, s]} %>
    </div>

    <div class="field">
      <%= f.input :time_spent, label: "Weekly time spent on mobile games", collection: User::TIME_SPENT_.map{|s| [s.humanize, s]} %>
    </div>

    <div class="field">
      <%= f.input :spending, label: "Monthly money spent", collection: User::SPENDING_.map{|s| [s.humanize, s]} %>
    </div>

    <div class="field">
      <%= f.input :motivation, collection: User::MOTIVATION_.map{ |s| [s.humanize, s]} %> <!-- To humanize the underscores into spaces -->
    </div>

    <div class="field">
      <%= f.input :nation, collection: User::NATION_.map{ |s| [s.humanize, s]} %> 
    </div>

    <div class="field">
      <%= f.input :game_genre, collection: User::GAME_GENRE_.map{ |s| [s.humanize, s]} %> 
    </div>

    <div class="field">
      <%= f.input :num_games, label: "# games currently in your device" %>
    </div>

    <div class="field">
      <%= f.input :fav_game, label: "Favorite Game" %>
    </div>





    <i>Leave blank if you don't want to change your password</i>

    <div class="field">
      <%= f.label :new_password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>


    <div class="actions">
      <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

